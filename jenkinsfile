pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                echo 'Building the project...'
                dir('client'){
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Build Docker Image'){
            steps{
                echo 'Testing the project...'
                sh 'docker-compose up -d'
            }
        }
    }
}